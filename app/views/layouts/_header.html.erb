<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav class='nav navbar-nav navbar-left' >
      <%= link_to 'Logo', root_path, class: "logo" %>
    </nav>
    <nav>
      <ul class="nav navbar-nav navbar-right">

        <% if user_signed_in? %>
          <li><%= link_to 'About', about_path %></li>
          <li><%= link_to 'マイページ', user_path(current_user) %></li>
          <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
          <li><%= link_to '新規投稿', new_post_path %></li>
          <li><%= link_to '投稿一覧', posts_path %></li>
          <li><%= link_to '問い合わせ', new_contact_path %></li>
          <li><%= link_to(notifications_path) do %>
                <% if unchecked_notifications.any? %>
                  <span class="fa-stack">
                    <i class="far fa-bell fa-lg fa-stack-2x" style="font-size: 1.7em;"></i>
                    <i class="fas fa-circle n-circle fa-stack-1x"></i>
                  </span>
                <% else %>
                  <i class="far fa-bell fa-lg" style="font-size: 1.7em;"></i>
                <% end %>
              <% end %>
          </li>

        <% elsif admin_signed_in? %>
          <li><%= link_to 'About', about_path %></li>
          <li><%= link_to '問い合わせ一覧', admin_contacts_path %></li>
          <li><%= link_to '投稿一覧', posts_path %></li>
          <li><%= link_to 'エリア一覧', admin_areas_path %></li>
          <li><%= link_to 'ジャンル一覧', admin_genres_path %></li>
          <li><%= link_to '会員一覧', admin_users_path %></li>
          <li><%= link_to 'ログアウト', destroy_admin_session_path, method: :delete %></li>
          </li>

        <% else %>
          <li><%= link_to 'About', about_path %></li>
          <li><%= link_to '投稿一覧', posts_path %></li>
          <li><%= link_to 'ログイン', new_user_session_path %></li>
          <li><%= link_to '新規登録', new_user_registration_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>