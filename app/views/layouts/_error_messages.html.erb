<% if resource.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
  	<h4><%= resource.errors.count %>件のエラー:
    記入されてない箇所があります。</h4>
    <ul id ="error_explanation" >
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>