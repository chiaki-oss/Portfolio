<h2>会員ID：<%= @user.id %> <br>
	<%= attachment_image_tag @user, :image, format: 'jpeg', fallback: "no_image.jpg", size: "30x30" %>
	<%= @user.name %>さんの Profile</h2>
<div class="row">
		<p>会員ステータス：
			<% if @user.is_active? %>
		        <span>有効</span>
	        <% else %>
		       	<span>退会済</span>
		    <% end %>/
		    <%= link_to "編集する", edit_admin_user_path %>
		</p>

		<p>おすすめ：<%= @user.recommend %></p>
		<p>自己紹介：<%= @user.introduction %></p>
		<p>Follows：<%= link_to @user.follower.count, user_follows_path(@user) %>
			Follower：<%= link_to @user.followed.count, user_followers_path(@user) %>
		</p>


</div>

<h2>User Post</h2>
<div class="row">
	<% @posts.each do |post| %>
	<div class="col-xs-4">
		<%= link_to post_path(post) do %>
			<%= attachment_image_tag post, :image, format: "jpeg", fallback: "no-image.jpg", size:"250x200" %>
		<% end %>
		<p><%= post.title %></p>
	</div>
	<% end %>
</div>

<div>
	<%= link_to '会員一覧に戻る', admin_users_path %>
</div>