<h1>ユーザー情報</h1>
<div class="row">
	<div class="col-xs-12">
		<p><%= attachment_image_tag(@user, :image, :fill, 50, 50, fallback: "no_image.jpg") %></p>
		<p>会員ID：<%= @user.id %></p>
		<p>会員ステータス：
			<% if @user.is_active? %>
		        <span>有効</span>
	        <% else %>
		       	<span>退会済</span>
		    <% end %>
		</p>
		<p>アカウント名：<%= @user.name %></p>
		<p>おすすめ：<%= @user.recommend %></p>
		<p>自己紹介：<%= @user.introduction %></p>
		<p><%= link_to "編集する", edit_admin_user_path %></p>
	</div>
</div>

<h2>投稿一覧</h2>
<div class="row">
	<% @posts.each do |post| %>
	<div class="col-xs-4">
		<%= link_to post_path(post) do %>
			<%= attachment_image_tag post, :image, format: "jpeg", fallback: "no-image.jpg", size:"250x200" %>
		<% end %>
		<p><%= post.title %></p>
	</div>
	<% end %>
</div>

<div>
	<%= link_to '会員一覧に戻る', admin_users_path %>
</div>