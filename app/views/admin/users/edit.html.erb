<h1><%= attachment_image_tag @user, :image, format: "jpeg", fallback: "no_image.jpg", size:"50x50" %>
	<%= @user.name %>さんの会員ステータスの編集</h1>

<%= form_for(@user, url: admin_user_path) do |f| %>

	<p>会員ステータス　
		<%= f.radio_button :is_active, 1 %>
		<%= f.label :is_active, "有効" %>
		<%= f.radio_button :is_active, 0 %>
		<%= f.label :is_active, "退会済み" %>
	</p>

	<p>ユーザー名　
		<%= f.text_field :name, class: "form-control" %>
	</p>
	<p>メールアドレス
		<%= f.text_field :email, class: "form-control" %>
	</p>

	<div>
		<%= f.submit "更新する", class: "btn btn-primary" %>
	</div>

<% end %>


