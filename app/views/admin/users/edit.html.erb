<h1><%= attachment_image_tag @user, :image, format: "jpeg", fallback: "no_image.jpg", size:"50x50" %>
	<%= @user.name %>さんの会員ステータスの編集</h1>

<%= form_for(@user, url: admin_user_path) do |f| %>

	<table>
		<tbody>
			<tr>
				<td>会員ステータス</td>
				<td><%= f.radio_button :is_active, 1 %>
					<%= f.label :is_active, "有効" %></td>
				<td><%= f.radio_button :is_active, 0 %>
					<%= f.label :is_active, "退会済み" %></td>
			</tr>
			<tr>
				<td>ユーザー名</td>
				<td><%= f.text_field :name %></td>
			</tr>
			<tr>
				<td>メールアドレス</td>
				<td><%= f.text_field :email %></td>
			</tr>

		</tbody>
	</table>

	<div>
		<%= f.submit "更新する" %>
	</div>


<% end %>


