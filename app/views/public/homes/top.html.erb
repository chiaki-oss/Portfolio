<h1>Home#top</h1>
<div class="row">
	<div class="col-xs-9">
		<h3>新着投稿</h3>
		<div class="row">
			<% @new_posts.each do |post| %>
			<div class="col-xs-4">
				<%= link_to post_path(post) do %>
					<%= attachment_image_tag post, :image, format: "jpeg", fallback: "no_image.jpg", size:"250x200" %>
				<% end %>
				<p>
					<%= attachment_image_tag(post.user, :image, :fill, 30, 30) %>
					<span><%= post.user.name %></span>
			    </p>
			    <p><%= post.favorites.count %>いいね</p>
				<p>タイトル：<%= post.title %></p>
			</div>
			<% end %>
		</div>

		<div class="row">
			<h3>いいね数が多い投稿</h3>
			<% @liked_posts.each do |post| %>
			<div class="col-xs-4">
				<%= link_to post_path(post) do %>
					<%= attachment_image_tag post, :image, format: "jpg", fallback: "no_image.jpg", size:"250x200" %>
				<% end %>
				<p>
					<%= attachment_image_tag(post.user, :image, format: "jpg", size: "100x100") %>
					<span><%= post.user.name %></span>
					<p><%= post.favorites.count %>いいね</p>
			    </p>
				<p>タイトル：<%= post.title %></p>
			</div>
			<% end %>
	    </div>
	</div>

	<div class="col-xs-3">
		<div class="area">
			<h3>ジャンル一覧</h3>
			<% @genres.each do |genre| %>
				<%= link_to genre.name, posts_path(genre_id: genre.id) %>
			<% end %>
		</div>
		<div class="area">
			<h3>エリア一覧</h3>
			<p><% @areas.each do |area| %>
				<%= link_to area.name, posts_path(area_id: area.id) %>エリア
					<p><% area.prefectures.each do |prefecture| %>
						<%= link_to prefecture.name, posts_path(prefecture_id: prefecture.id) %>
					<% end %></p>
			<% end %>
			</p>
		</div>

		<div class="area">
			<h3>タグ一覧</h3>
			<% @tags.each do |tag| %>
				<%= link_to tag.name, posts_path(tag_id: tag.id) %>
			<% end %>
		</div>
	</div>
</div>