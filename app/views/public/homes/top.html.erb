<h1>Home#top</h1>
<h3>新着投稿</h3>
<div class="row">
	<div class="col-xs-9">
		<% @posts.each do |post| %>
		<div class="col-xs-4">
			<%= link_to post_path(post) do %>
				<%= attachment_image_tag post, :image, format: "jpeg", fallback: "no_image.jpg", size:"250x200" %>
			<% end %>
			<p><%= attachment_image_tag(post.user, :image, :fill, 30, 30, fallback: "no_image.jpg") %></p>
			<p>投稿者：<%= post.user.name %></p>
			<p>タイトル：<%= post.title %></p>
		</div>
	<% end %>
	</div>

	<div class="col-xs-3">
		<div class="area">
			<h3>ジャンル一覧</h3>
			<% @genres.each do |genre| %>
				<%= link_to genre.name, posts_path(genre_id: genre.id) %>
			<% end %>
		</div>
		<div class="area">
			<h3>エリア一覧</h3>
			<% @areas.each do |area| %>
				<%= link_to area.name, posts_path(area_id: area.id) %>
			<% end %>
		</div>
		<div class="area">
			<h3>タグ一覧</h3>
			<% @tags.each do |tag| %>
				<%= link_to tag.name, posts_path(tag_id: tag.id) %>
			<% end %>
		</div>
	</div>
</div>