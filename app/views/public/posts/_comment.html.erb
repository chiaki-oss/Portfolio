<thead>
	<tr>
		<td></td>
		<td><i class="far fa-star fa-lg"></i></td>
		<td><i class="far fa-comment-dots fa-lg"></i></td>
		<td>コメント日</td>
	</tr>
</thead>
<tbody>
<% post_comments.each do |post_comment| %>
    <tr>
        <td>
            <%= link_to user_path(post_comment.user) do %>
	            <%= attachment_image_tag post_comment.user, :image, format: 'jpeg', fallback: "no_image.jpg", size: "30x30" %><br>
                <%= post_comment.user.name %>
            <% end %>
        </td>
        <!-- 星評価 -->
        <td id="star-rate-#{post_comment.id}">
        	<%= post_comment.rate %>
        </td>

        <td><%= post_comment.comment %></td>
        <td><%= post_comment.created_at.strftime("%Y/%m/%d") %></td>
        <!--コメント削除 -->
        <% if post_comment.user == current_user %>
        <td>
	        <%= link_to 'コメント（評価）を削除する', post_post_comment_path(post_comment.post, post_comment ), method: :delete, remote: true %>
	        <% end %>
	    </td>
    </tr>
<% end %>
</tbody>
