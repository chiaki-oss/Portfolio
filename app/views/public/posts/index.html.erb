<h1>投稿一覧</h1>
<div class="row">
	<% @posts.each do |post| %>
		<div class="col-xs-4">
			<%= link_to post_path(post) do %>
				<%= attachment_image_tag post, :image, format: "jpeg", fallback: "no-image.jpg", size:"250x200" %>
			<% end %>
			<%= attachment_image_tag(post.user, :image, :fill, 30, 30, fallback: "no_image.jpg") %>
			<p>投稿者：<%= post.user.name %></p>
			<p>タイトル：<%= post.title %></p>
		</div>
	<% end %>
</div>
