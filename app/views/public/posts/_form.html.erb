<%= form_for(post, url: url) do |f| %>
<%= render 'layouts/error_messages', resource: post %>
<div class="row">

	<div class="col-xs-5">
		<div id="image">
			<span><%= f.attachment_field :image %></span>
			<%= attachment_image_tag post, :image, format: 'jpeg', fallback: "sample.jpg", size:"350x300" %>
		</div>
	</div>

	<div class="col-xs-7">
		<div class="row">
			<table class="col-xs-12">
				<tbody>
					<tr>
						<td><%= f.label :都道府県 %></td>
						<td><%= f.collection_select :prefecture_id, Prefecture.all, :id, :name, :prompt => "選択してください"%></td>
					</tr>
					<tr>
						<td><%= f.label :ジャンル %></td>
						<td><%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => "選択してください"%></td>
					</tr>
					<tr>
						<td><%= f.label :タイトル %></td>
						<td><%= f.text_field :title, class: "form-control"%></td>
					</tr>

					<tr>
						<td><%= f.label :タグ %></td>
						<td><%= f.text_field :tag_ids, class: "form-control",placeholder: "タグをつける。複数つける場合は ,(コンマ)で区切ってください。" %></td>
					</tr>
					<tr>
						<td><%= f.label :説明 %></td>
						<td><%= f.text_area :body, rows:'10', class: "form-control" %></td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>

<div class="action">
	<%= f.submit submit %>
	<p><%= link_to '戻る', :back %></p>
</div>
<% end %>