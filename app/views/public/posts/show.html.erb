<h1>投稿詳細</h1>
<div class="row">
	<div class="col-xs-5 col-xs-offset-1">
		<%= attachment_image_tag @post, :image, format: 'jpeg', fallback: "no_image.jpg", size:"350x300" %>
	</div>
	<div class="col-xs-6">
		<p>ユーザー名：<%= link_to @post.user.name, @post.user %></p>
		<p>都道府県：<%= @post.prefecture.name %></p>
		<p>ジャンル：<%= @post.genre.name %></p>
		<p>タグ：<% @post.tags.each do |tag| %>
					#<%= link_to tag.name, posts_path(tag_id: tag.id) %>
				<% end %>
		</p>
		<p>投稿日時：<%= @post.created_at.strftime("%Y/%m/%d") %></p>
		<p>更新日時：<%= @post.updated_at.strftime("%Y/%m/%d ") %></p>
		<% if user_signed_in? %>
        <p> <!-- いいね機能 -->
		    <% if @post.favorited_by?(current_user) %>
	            <%= link_to post_favorites_path(@post), method: :delete do %>
		            <span class="glyphicon glyphicon-heart"></span>
	            <% end %>
	        <% else %>
	            <%= link_to post_favorites_path(@post), method: :post do %>
		            <span class="glyphicon glyphicon-heart-empty"></span>
		        <% end %>
	        <% end %>
	        <%= @post.favorites.count %>
	        <span id="star-rate-#{post.id}"></span>
        </p>
        <% end %>
        <p>コメント数：<%= @post.post_comments.count %></p>
        <!-- ユーザーの投稿編集・削除ボタン -->
        <% if @post.user == current_user %>
	        <p><%= link_to 'Edit', edit_post_path(@post) %>
	        <%= link_to 'Destroy', @post, method: :delete, data: { confirm: '本当に消しますか？' } %></p>
	    <% end %>
	</div>
</div>

<div class="row">
	<h2><%= @post.title %></h2>
	<p><%= @post.body %></p>
</div>

<!-- コメントフォーム -->
<% if user_signed_in? %>
	<div class="row">
		<h4>コメント入力欄</h4>
		<%= form_for [@post, @post_comment] do |f| %>
		    <%= f.text_area :comment, size: "90x5" %>

		    <%= f.hidden_field :rate, id: :post_rate %>

		    <div id=star></div>

		    <%= f.submit '送信' %>
		<% end %>
	</div>
<% end %>

<!-- コメント一覧 -->
<% if @post_comments.exists? %>
	<div class="row">
		<h4>コメント一覧</h4>
		<table class="col-xs-12">
			<thead>
				<tr>
					<td></td>
					<td>評価</td>
					<td>コメント</td>
					<td>投稿日</td>
			<tbody>
	        <% @post.post_comments.each do |post_comment| %>
		        <tr>
		            <td>
			            <%= link_to user_path(post_comment.user) do %>
				            <%= attachment_image_tag post_comment.user, :image, :fill, 50, 50, fallback: "no_image.jpg", size: "50x50" %><br>
			                <%= post_comment.user.name %>
		                <% end %>
		            </td>
		            <td><%= post_comment.rate %></td>
			        <td><%= post_comment.comment %></td>
			        <td><%= post_comment.created_at.strftime("%Y/%m/%d") %></td>
			        <!--コメント削除 -->
			        <% if post_comment.user == current_user %>
			        <td>
				        <%= link_to 'Destroy', post_post_comment_path(post_comment.post, post_comment ), method: :delete %>
				        <% end %>
				    </td>
		        </tr>
		    <% end %>
			</tbody>
	    </table>
	</div>
<% end %>

