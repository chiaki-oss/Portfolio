<!-- SIDEBAR -->
<div>
	<%= render 'layouts/sidebar', {genres: @s_genres, tags: @s_tags, areas: @s_areas} %>
</div>

<h2><%= @post.title %></h2><hr>
<% if @post.address? %>
	<p><i class="fas fa-map-marker-alt fa-lg"></i>
		〒<%= @post.postal_code  %> <%= @post.address %></p>
<% end %>
<div class="row">
	<div class="col-xs-5">
		<%= attachment_image_tag @post, :image, format: 'jpeg', fallback: "sample.jpg", width:'100%', height: '100%' %>
		<p>投稿日 <%= @post.created_at.strftime("%Y/%m/%d") %>
		   更新日 <%= @post.updated_at.strftime("%Y/%m/%d ") %></p>
	</div>
	<div class="col-xs-3">
		<p>
	        <span class="post-prefecture"><%= link_to @post.prefecture.name, posts_path(prefecture_id: @post.prefecture.id)  %></span>
			<span class="post-genre"><%= link_to @post.genre.name, posts_path(genre_id: @post.genre.id) %></span>
		</p>

		<%= link_to user_path(@post.user) do %>
            <%= attachment_image_tag @post.user, :image, format: 'jpeg', fallback: "no_image.jpg", size: "30x30" %>
            <%= @post.user.name %>
        <% end %>

		<p><% @post.tags.each do |tag| %>
				#<%= link_to tag.name, posts_path(tag_id: tag.id) %>
			<% end %>
		</p>
		<!-- いいね機能 -->
		<p class="favorite-<%= @post.id %>">
			<%= render 'public/favorites/favorite', post: @post %>
		</p>
    </div>

    <div class="col-xs-4">
        <!-- ユーザーの投稿編集・削除ボタン -->
        <% if @post.user == current_user  %>
	        <p><%= link_to '投稿を編集する', edit_post_path(@post), class: "btn btn-default" %></p>
	        <p><%= link_to '投稿を削除する', @post, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-default" %></p>
	        <!-- visionApi タグの提案 -->
	        <% if @post.image.present? %>
		        <p><strong>タグを付けてみましょう！</strong><br><hr>
			        	タグをつけると類似した投稿を見ることができます。<br>
			        	あなたの投稿にはこんなタグをつけるといいでしょう。<br>
			        	（例）<%= @label %><br>
			        	→　<%= link_to '投稿にタグを追加する', edit_post_path(@post) %>
			    </p>
	        <% end %>

	    <% elsif user_signed_in? %>
	    <!-- howto -->
		    <p>「知らなかった！」「行ってみたい！」と思った投稿に♡を送りましょう。
			    ♡をつけた投稿はマイページから確認できます。</p>
			    <p>
			    「もっと知りたい！」など投稿者に聞いてみたいことや、「これは伝えたい！」などあなたが感じたことがあればコメントを送ったり、星の評価を送ってみましょう。</p>

		<% else %>
			<p>お気に入り投稿の登録（♡）やコメント、☆評価は会員登録済の方のみ可能となります。</p>
			<p>会員登録をして、あなたのおすすめを投稿したり、お気に入りやコメントを送ったり、、、みんなと交流してみましょう！</p>
			<p>
				→　<%= link_to '会員登録はこちらから', new_user_registration_path, class: "btn btn-default" %>
			</p>

	    <% end %>
	</div>
</div>

<div class="row">
	<p>《紹介文》</p>
	<p><%= @post.body %></p>
</div>

<!-- コメントフォーム -->
<% if user_signed_in? %>
	<div class="row">
		<h4>Comment Form</h4>
		<div id="comment-form-<%= @post.id %>">
			<%= render partial: "public/posts/comment_form", locals: {post: @post, post_comment: @post_comment} %>
		</div>
	</div>
<% end %>

<!-- コメント一覧 -->
<% if @post.post_comments.exists? %>
	<div class="row">
		<h4>コメント一覧</h4>
		<table id="comment_index-<%= @post.id %>" class="table">
			<%= render partial: "public/posts/comment", locals: {post: @post, post_comments: @post_comments} %>
		</table>
	</div>
<% end %>

