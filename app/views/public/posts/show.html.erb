<h1>投稿詳細</h1>
<div class="row">
	<div class="col-xs-5 col-xs-offset-1">
		<%= attachment_image_tag @post, :image, format: 'jpeg', fallback: "no_image.jpg", size:"350x300" %>
	</div>
	<div class="col-xs-6">
		<p><%= link_to @post.user.name, mypage_path %></p>
		<p><%= @post.prefecture.name %></p>
		<p><%= @post.genre.name %></p>
	</div>
</div>

<div class="row">
	<h2><%= @post.title %></h2>
	<p><%= @post.body %></p>
</div>
