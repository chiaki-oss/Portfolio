<h1>ユーザー情報</h1>
<div class="row">
	<div class="col-xs-12">
		<p><%= @user.name %></p>
		<p><%= @user.introduction %></p>
		<p><%= @user.recommend %></p>
	</div>
</div>

<h2>投稿一覧</h2>
<div class="row">
	<% @posts.each do |post| %>
		<%= link_to post_path(post) do %>
			<%= attachment_image_tag post, :image, format: "jpeg", fallback: "no-image.jpg", size:"250x200" %>
		<% end %>
		<p>投稿者：<%= post.user.name %>　　　タイトル：<%= post.title %></p>
	<% end %>
</div>
