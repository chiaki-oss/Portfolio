<h3>お気に入りの投稿一覧</h3>
<div class="row">
	<% @favorite_posts.each do |favorite_post| %>
		<div class="col-xs-2">
			<%= link_to post_path(favorite_post) do %>
				<%= attachment_image_tag(favorite_post, :image, :fill, 100, 100, fallback: "no_image.jpg") %>
			<% end %>
			<p><%= favorite_post.title %></p>
		</div>
	<% end %>
</div>
<%= link_to 'マイページに戻る', user_path(current_user) %>