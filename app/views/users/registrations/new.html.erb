
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="row">
    <h3 class="title">Sign up　新規会員登録</h3>
    <p>ユーザー名、メールアドレス、パスワードを入力ください</p>
    <div class="form-horizontal">
      <div class="form-group">
        <%= f.label :name, class: "col-sm-2" %>　
        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "name", class: "col-sm-4" %>
      </div>

      <div class="form-group">
        <%= f.label :email, class: "col-sm-2" %>　
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "col-sm-4" %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "col-sm-2" %> 
        <% if @minimum_password_length %>
          <em> *<%= @minimum_password_length %> 文字以上</em>
        <% end %>　　　 　
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "col-sm-4" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class: "col-sm-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password confirmation", class: "col-sm-4" %>
      </div>

      <div class="actions">
        <%= f.submit "ユーザー登録する", class: "btn btn-primary" %>　
        <%= link_to 'ゲストログイン USER ', users_guest_sign_in_path, method: :post, class: "btn btn-default" %>
      </div>
    </div>
  </div>
<% end %>
  <div class="row">
    <%= render "users/shared/links" %>
  </div>
